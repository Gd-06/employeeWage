package Day7;

public class empWageUC6 {
    public static void main(String[] args) {

        int fullTime=1;
        int rate_hr=20;
        int wage=0;
        int hrs=0;
        int workingDays=20;
        double cal=Math.floor(Math.random()*10)%3;


        if(cal == fullTime && workingDays>=20) {
            hrs = 8;

            wage = hrs * rate_hr;
            int result = wage * 30;
            System.out.println("Employee Wage is : " + result);
        }
        else{
            System.out.println("minimum working days");

        }
    }
}
